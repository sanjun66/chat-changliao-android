<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llt_new_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_new_friend"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/default_fmessage"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_marginStart="25dp"/>

        <TextView
            android:id="@+id/tv_new_friends"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="@string/new_friend"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:layout_marginStart="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/new_friend_red_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dp"
            android:minWidth="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ui_shape_unread"
            android:gravity="center"
            android:layout_marginEnd="25dp"
            tools:text="1"
            android:textColor="@color/ui_white"
            android:textSize="10sp"
            tools:visibility="visible"
            android:visibility="gone"/>
    </LinearLayout>

    <View style="@style/line2"/>

    <LinearLayout
        android:id="@+id/llt_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/default_chatroom"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:layout_marginStart="25dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="@string/group"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"/>
    </LinearLayout>



</LinearLayout>