<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_dialog_bg_white_radius_10"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:src="@drawable/ui_img_permission" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_dp16"
        android:layout_marginTop="@dimen/ui_dp15"
        android:layout_marginRight="@dimen/ui_dp16"
        android:textColor="#2B2E34" />


    <com.legend.baseui.ui.widget.base.BaseRecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/ui_dp16"
        android:layout_marginRight="@dimen/ui_dp16"
        android:layout_weight="1" />


    <View
        android:layout_marginTop="@dimen/ui_dp20"
        style="@style/ui_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_dp50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#AAAABB"
            android:textSize="@dimen/ui_sp16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E5E5E5" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去允许"
            android:textColor="#317BDE"
            android:textSize="@dimen/ui_sp16" />
    </LinearLayout>

</LinearLayout>